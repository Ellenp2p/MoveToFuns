---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ClassCard from "@/components/ClassCard.astro";


const classList: {
	title : string;
    img?: string;
    description: string;
    url: string;
}[] = [
	{
		title : "Sui Move 基础",
		description: '',
		url: "/sui101/0-getting-started"
	},
	// {
	// 	title : "Sui Move 进阶",
	// 	description: '',
	// 	url: ""
	// },
];
---
<BaseLayout title="Welcome To Startrek">
	<div class="bg-white dark:bg-slate-900 h-full grow"> 
		<div class="flex flex-col items-center justify-center text-white sm:h-[20rem] h-[25rem]  4xl:h-[35rem] bg-cover bg-center" style="background-image: url('/starterk_web3.png');">
			<div class="flex flex-col items-center justify-center">
				<span class=" text-5xl font-bold tracking-wide">Startrek</span>
				<span class="mt-6 font-normal text-xl tracking-wide" >开发者的 Web3 开源大学 </span>
			</div>

			<div class="flex gap-6 mt-12">
				<a href="/sui101/0-getting-started">
					<button type="button" class="focus:outline-none text-white bg-yellow-400 hover:bg-yellow-500    font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2  "> 
						<span>开始学习</span> 
					</button>
				</a>
				<a>
					<button type="button" class=" text-white  bg-transparent border border-gray-300   hover:bg-gray-100 hover:text-black   font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600  ">
						<span> 加入社区</span> 
					</button>
				</a>
			</div>
		</div>

		<div class="mt-10">
			<div class="flex flex-col items-center justify-center text-black dark:text-white">
				<span class="text-3xl font-bold tracking-wide">课程</span>
				<span class="mt-2 tracking-wide">为开发者设计的 Web3 课程</span>
			</div>
		</div>
		<div class="flex flex-row items-center justify-center gap-4 mt-16 mx-2">
			{
				classList.map(({title, url, description,img})=>
					<>
						<ClassCard title={title} url={url} img={img} description={description}/>
					</>
				)
			}
		</div>
	</div>
</BaseLayout>
